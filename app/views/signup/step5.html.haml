.sign-up-body
  .sign_up2__header
    =link_to root_path do
      =image_tag "//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?863353983", alt: "mercari", class: "image_sign_up_small"
    .step_bar
      %ul.cp_stepflow01
        %li.completed
          会員情報
          %span.bubble
        %li.completed
          電話番号認証
          %span.bubble
        %li.completed
          お届け先住所入力
          %span.bubble
        %li.active
          支払い方法
          %span.bubble
        %li
          完了
          %span.bubble>
  .sign_up2__main
    = form_tag({ controller: 'signup', action: 'create' },{ method: :post}) do
      .sign_up2__main__header
        %h2 支払い方法
      .sign_up2__main__form
        #form1
          %label カード番号
          %label.attention 必須
          = text_field_tag "card_number", "", type: "text", id: "card_number", class: "big", placeholder: "半角数字のみ", maxlength: "16", required: "true"
          .card__logo
            %li
              = image_tag "//www-mercari-jp.akamaized.net/assets/img/card/visa.svg?917505326", class: "card"
            %li
              = image_tag "//www-mercari-jp.akamaized.net/assets/img/card/master-card.svg?917505326", class: "card"
            %li
              = image_tag "//www-mercari-jp.akamaized.net/assets/img/card/saison-card.svg?917505326", class: "card"
            %li
              = image_tag "//www-mercari-jp.akamaized.net/assets/img/card/jcb.svg?917505326", class: "card"
            %li
              = image_tag "//www-mercari-jp.akamaized.net/assets/img/card/american_express.svg?917505326", class: "card"
            %li
              = image_tag "//www-mercari-jp.akamaized.net/assets/img/card/dinersclub.svg?917505326", class: "card"
            %li
              = image_tag "//www-mercari-jp.akamaized.net/assets/img/card/discover.svg?917505326", class: "card"
        #form1
          %label 有効期限
          %label.attention 必須
          %br/
          %select#exp_month{name: "exp_month", type: "text", class: "form", required: "true"}
            %option{value: ""} --
            %option{value: "1"}01
            %option{value: "2"}02
            %option{value: "3"}03
            %option{value: "4"}04
            %option{value: "5"}05
            %option{value: "6"}06
            %option{value: "7"}07
            %option{value: "8"}08
            %option{value: "9"}09
            %option{value: "10"}10
            %option{value: "11"}11
            %option{value: "12"}12
          %span.expire-text 月
          %select#exp_year{name: "exp_year", type: "text", class: "form", required: "true"}
            %option{value: ""} --
            %option{value: "2019"}19
            %option{value: "2020"}20
            %option{value: "2021"}21
            %option{value: "2022"}22
            %option{value: "2023"}23
            %option{value: "2024"}24
            %option{value: "2025"}25
            %option{value: "2026"}26
            %option{value: "2027"}27
            %option{value: "2028"}28
            %option{value: "2029"}29
          %span.expire-text 年
        #form1
          %label セキュリティコード
          %label.attention 必須 
          %br/
          = text_field_tag "cvc", "", id: "cvc", type: "text", class: "big", placeholder: "カード背面４桁もしくは３桁の番号", maxlength: "4", required: "true"
        #form1
          = submit_tag "次へ進む", id: "tokun_submit", class: "buttom1"
  .sign_up__footer
    %nav
      %li
        = link_to "プライバシーポリシー", "https://www.mercari.com/jp/privacy/",class:"sign_up__footer--list"
        &emsp;
      %li
        = link_to "メルカリ利用規約", "https://www.mercari.com/jp/tos/",class:"sign_up__footer--list"
        &emsp;
      %li
        = link_to "特定商取引に関する表記", "https://www.mercari.com/jp/tokutei/",class:"sign_up__footer--list"
        &emsp;
    =link_to "https://www.mercari.com/jp/", class: "single-footer-logo" do
      =image_tag "//www-mercari-jp.akamaized.net/assets/img/common/common/logo-gray.svg?3791839826", alt: "mercari", class: "single-footer-logo"
    %p
      %small © 2019 Mercari


