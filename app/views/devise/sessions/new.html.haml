.sign-up-body
  .sign_up__header
    =link_to root_path do
      =image_tag "//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?863303983", alt: "mercari", class: "image_sign_up"
  .sign_in__panel
    .sign_in__main
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .sign_in__main__header
          %h3 アカウントをお持ちでない方はこちら
          = link_to "新規会員登録", new_user_registration_path, method: :get, class: "signup_btn"
        .sign_in__main__top
          %li
            =link_to "/users/auth/facebook", class: "facebook" do
              =fa_icon "facebook-square", class: "facebook"
              &emsp;&emsp;&emsp;&emsp;&emsp;Facebookでログイン
          %li
            =link_to "/users/auth/google_oauth2", class: "google" do
              =fa_icon "google", class: "google"
              &emsp;&emsp;&emsp;&emsp;&emsp;&emsp;Googleでログイン
        .field
          = f.email_field :email, autofocus: true, autocomplete: "email", class: "big", placeholder: "メールアドレス"
        .field
          = f.password_field :password, autocomplete: "current-password", class: "big", placeholder: "パスワード"
        .field__recaptcha
          = recaptcha_tags
        .actions
          = f.submit "ログイン", class: "login_btn"
        .field_link
          = link_to "パスワードをお忘れの方", new_user_password_path, class: "password"
  .sign_up__footer
    %nav
      %li
        = link_to "プライバシーポリシー" , "https://www.mercari.com/jp/privacy/" ,class:"sign_up__footer--list"
      %li
        = link_to "メルカリ利用規約" , "https://www.mercari.com/jp/tos/",class:"sign_up__footer--list"
      %li
        = link_to "特定商取引に関する表記" , "https://www.mercari.com/jp/tokutei/",class:"sign_up__footer--list"

    =link_to "https://www.mercari.com/jp/", class: "single-footer-logo" do
      =image_tag "//www-mercari-jp.akamaized.net/assets/img/common/common/logo-gray.svg?3791839826", alt: "mercari", height: "65", width: "80", class: "single-footer-logo"
    %p
      %small © 2019 Mercari
