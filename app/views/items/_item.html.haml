.main-content
  .pickup-title ピックアップカテゴリー
  .content  
    =link_to "レディース新着アイテム" , "" , class:"content__title"
    .content__box
      -items.where(category_id: 1..17).where.not(category_id: 2..4).order("created_at DESC").last(4).each do |item| 
        .item 
          =link_to detail_item_path(item) do
            .item__image
            -item.images.each do |p|
              %img{src: p.photo,class: "thumbnail-image"}
            .item__text
              .item__text__name 
                = item.name
              .item__text__num  
                %li.item__text__num--price  
                  = "¥#{item.price.to_s(:delimited)}"
                %li.item__text__num--font
                  =render partial:'goods/good', locals:{item:item}
                  .good-count{style:"padding-left:6px"}= item.goods.count


    %li.view-all
      =link_to "すべての商品を見る" , "" , class:"view-all"
