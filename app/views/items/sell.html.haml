.single-container
  %header.single-header
    %h1
      =link_to "https://www.mercari.com/jp/" do
        = image_tag "//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?863303983" ,alt: "mercari", height: "49", width: "185"
  %main.single-main
    .single-main__container
      = form_for @item, html: {class: "dropzone", id: "item-dropzone" } do |f|
        %h2.sell-container 商品の情報を入力
        %form.sell-form
          .sell-form__upload
            %h3.sell-form__upload--head
              %lavel 出品画像
              %span.form-arbitrary 必須
            %p 最大10枚までアップロードできます
            = f.fields_for :item_images do |image|
              .sell-form__upload--box
                .sell-form__upload--box--items
                  .sell-form__upload--box--item
                    #preview
                    .dropzone-area
                      = image.label :images, class: "dropzone-box", for: "upload-image" do
                        %input.sell-form__upload__drop-file
                          = image.file_field :images, multiple: true, name: 'product_images[image][]', id: "upload-image", class: "upload-image", 'data-image': 0
                        %pre
                          :preserve
                            ドラッグアンドドロップ
                            またはクリックしてファイルをアップロード
                    #preview2
                    .dropzone-area2
                      = image.label :images, class: "dropzone-box", for: "upload-image" do
                        %pre
                          :preserve
                            ドラッグアンドドロップ
                            またはクリックしてファイルをアップロード
        .sell-content
          .form-group
            %lavel 商品名
            %span.form-arbitrary 必須
            %input.input-default{placeholder:"商品名（必須40文字まで）",type:"text",value:""}
          .form-group
            %lavel 商品の説明
            %span.form-arbitrary 必須
            %textarea.input-default{placeholder:"商品の説明（必須 1,000文字以内）（色、素材、重さ、定価、注意点など）例）2010年頃に1万円で購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです。", type:"text",value:"" , rows:5}
        .sell-content.clearfix
          .sell-content__head 商品の詳細
          .form-group
            %lavel カテゴリー
            %span.form-arbitrary 必須
            .select-wrap
              = fa_icon 'angle-down'
              %select.select-default{name: "prefecture"}
                %option{selected: "selected"} --
                %option 北海道
            %lavel 商品の状態
            %span.form-arbitrary 必須
            .select-wrap
              = fa_icon 'angle-down'
              %select.select-default{name: "prefecture"}
                %option{selected: "selected"} --
                %option 北海道
        .sell-content.clearfix
          .sell-content__head 配送について
          = link_to "?","/jp/help_center/article/68/", target: "_blank" ,class:"form-question"
          .form-group
            %lavel 配送料の負担
            %span.form-arbitrary 必須
            .select-wrap
              = fa_icon 'angle-down'
              %select.select-default{name: "prefecture"}
                %option{selected: "selected"} --
                %option 北海道
            %lavel 発送元の地域
            %span.form-arbitrary 必須
            .select-wrap
              = fa_icon 'angle-down'
              %select.select-default{name: "prefecture"}
                %option{selected: "selected"} --
                %option 北海道
            %lavel 発送までの日数
            %span.form-arbitrary 必須
            .select-wrap
              = fa_icon 'angle-down'
              %select.select-default{name: "prefecture"}
                %option{selected: "selected"} --
                %option 北海道
        .sell-content.clearfix
          .sell-content__head 販売価格(300〜9,999,999)
          = link_to "?","/jp/help_center/article/68/", target: "_blank" ,class:"form-question"
          .form-group
            %lavel 価格
            %span.form-arbitrary 必須
            %lavel.left-yen ¥
            %input{placeholder:"例）300",type:"text",value:"",class:"price"}
          .form-group__line
            %span 販売手数料(10%)
            %span -
          .form-group__line.bold
            %span 販売利益
            %span -
        .sell-content__sell-box
          %p
            = link_to "禁止されている出品" , "/jp/help_center/getting_started/prohibited_items/" ,target: "_blank"
            、
            = link_to "行為" , "/jp/help_center/getting_started/prohibited_conduct/" ,target: "_blank"
            を必ずご確認ください。
          %p
            またブランド品でシリアルナンバー等がある場合はご記載ください。
            = link_to "偽ブランドの販売" , "/jp/help_center/getting_started/counterfeit_goods/" ,target: "_blank"
            は犯罪であり処罰される可能性があります。
          %p
            また、出品をもちまして
            = link_to "加盟店規約" , "/jp/seller_terms/" ,target: "_blank"
            に同意したことになります。
          %button.btn-default.btn-red{type: "submit"}
            出品する
          %br
          = link_to "もどる" , root_path ,class:"btn-gray"
  %br
  %br
  .sign-up-body
    .sign_up__footer
      %nav
        %li
          = link_to "プライバシーポリシー" , "https://www.mercari.com/jp/privacy/" ,class:"sign_up__footer--list"
        %li
          = link_to "メルカリ利用規約" , "https://www.mercari.com/jp/tos/",class:"sign_up__footer--list"
        %li
          = link_to "特定商取引に関する表記" , "https://www.mercari.com/jp/tokutei/",class:"sign_up__footer--list"

      =link_to "https://www.mercari.com/jp/", class: "single-footer-logo" do
        =image_tag "//www-mercari-jp.akamaized.net/assets/img/common/common/logo-gray.svg?3791839826", alt: "mercari", height: "65", width: "80", class: "single-footer-logo"
      %p
        %small © 2019 Mercari


  %footer.single-footer